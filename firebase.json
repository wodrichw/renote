{
  "database": {
    "rules": {
      ".read": true,
      ".write": true,
      "emailMessages": {
        ".write": true,
        ".read": true
      },
      "sentMessages": {
        ".write": true,
        ".read": true
      }
    }
  },
  "hosting": {
    "public": "dist",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}